    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop" : true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "functions/built",
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
